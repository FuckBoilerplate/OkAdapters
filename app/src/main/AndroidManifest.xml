<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="miguelbcr.okadapters">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="app.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="app.recycler_view.RecyclerViewActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name="app.recycler_view.RecyclerViewPagerActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name="app.spinner.SpinnerActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name="app.stack_view.StackViewActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name="app.recycler_view.DummyActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>
